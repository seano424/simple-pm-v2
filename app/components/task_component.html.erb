<li class="task-item" data-task-id="<%= task.id %>" id="<%= dom_id(task) %>">
  <div class="card mb-3">
    <div class="card-body">
      <div class="card-title d-flex justify-content-between ">
        <div class="task-status mb-3">
          <i class="fas fa-grip-vertical grip mr-2 text-secondary"></i>
          <%= render (ProgressBadgeComponent.new(status: status)) %>

        </div>
        <div>
          <%= render(StatusChangerComponent.new(task_id: task_id, status: status)) %>
          <%= link_to edit_project_task_path(project, task), class: 'btn btn-light' do %>
            <i class="far fa-edit"></i>
            <% end %>
              <%= link_to [project, task], method: :delete, data: { confirm: 'Are you sure?' },
                class: 'btn btn-dark btn-sm' do %>
                <i class="fas fa-trash"></i>
                <% end %>
        </div>
      </div>
      <h5 class="mb-2">
        <span>
          <%= name %>
        </span>
      </h5>
      <p>
        <%= description %>
      </p>
    </div>
  </div>
</li>